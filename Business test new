  <script>
    (function(){
      // --- Simulatore (come da versione precedente con glow premium) ---
      const selMobile  = document.getElementById('selMobile');
      const selFisso   = document.getElementById('selFisso');
      const selEnergia = document.getElementById('selEnergia');
      const bulb   = document.getElementById('bulb');
      const lampTit= document.getElementById('lampTit');
      const lampSub= document.getElementById('lampSub');
      const banner = document.getElementById('banner');
      const btnCopy= document.getElementById('btnCopy');
      const btnWA  = document.getElementById('btnWA');

      const WA_NUMBER = "3908119578844"; // +39 08119578844

      function compute(){
        const m = selMobile.value;
        const f = selFisso.value;
        const e = selEnergia.value;

        let amount = 0;
        if (e === 'si') {
          if (m === 'si' && f === 'si') amount = 240;
          else if (m === 'si' || f === 'si') amount = 180;
        }

        const lampOn = amount > 0;

        banner.classList.remove('show','cta','win');
        if (lampOn) {
          banner.classList.add('show','win');
          banner.innerHTML = `ðŸŽ‰ Complimenti! Hai diritto allo <u>sconto annuo di â‚¬${amount}</u>.`;
        } else if (e === 'no' && (m==='si'||f==='si')) {
          const hint = (m==='si' && f==='si') ? 240 : 180;
          banner.classList.add('show','cta');
          banner.innerHTML = `ðŸ’¡ Attiva anche <b>Energia Business</b> per ottenere <u>â‚¬${hint}</u> di sconto annuo.`;
        } else {
          banner.innerHTML = '';
        }

        bulb.classList.toggle('off', !lampOn);
        bulb.classList.toggle('glow', lampOn);
        lampTit.textContent = lampOn ? 'Hai acceso la tua energia' : 'Lampadina spenta';
        lampSub.textContent = lampOn
          ? (amount===240 ? 'Fisso + Mobile + Energia: sconto totale â‚¬240/anno.'
                          : 'Mobile/Fisso + Energia: sconto â‚¬180/anno.')
          : 'Scopri gli sconti selezionando le opzioni.';

        const message =
`Simulazione Re Long
Mobile: ${m}
Fisso: ${f}
Energia: ${e}
Sconto: â‚¬${amount}/anno`;

        btnWA.href = "https://wa.me/" + WA_NUMBER + "?text=" + encodeURIComponent(message);
        return message;
      }

      [selMobile, selFisso, selEnergia].forEach(el => el.addEventListener('change', compute));
      document.getElementById('btnCopy').addEventListener('click', async()=> {
        const msg = compute();
        try{
          await navigator.clipboard.writeText(msg);
          document.getElementById('btnCopy').textContent="Copiato âœ”";
          setTimeout(()=>document.getElementById('btnCopy').textContent="Copia simulazione",1200);
        }catch(_){
          document.getElementById('btnCopy').textContent="Errore copia";
          setTimeout(()=>document.getElementById('btnCopy').textContent="Copia simulazione",1200);
        }
      });
      compute();

      // --- WhatsApp CTA per le sotto-sezioni ---
      const baseWA = "https://wa.me/" + WA_NUMBER + "?text=";
      const waMsgs = {
        fisso:   "Ciao Re Long! Sono interessato a Vodafone Business Linea Fissa. Mi dai info e verifica copertura? ðŸ“¶",
        mobile:  "Ciao Re Long! Sono interessato a Vodafone Business Linea Mobile. Mi dai info su piani e portabilitÃ ? ðŸ“±",
        fm:      "Ciao Re Long! Valuto bundle Vodafone Business Fisso + Mobile. Possiamo simulare i vantaggi? ðŸ”—",
        fme:     "Ciao Re Long! Voglio info su Fisso + Mobile + Energia per ottenere il massimo sconto. âš¡"
      };
      const setWA = (id, key) => {
        const el = document.getElementById(id);
        if (el) el.href = baseWA + encodeURIComponent(waMsgs[key]);
      };
      setWA('wa-fisso','fisso');
      setWA('wa-mobile','mobile');
      setWA('wa-fm','fm');
      setWA('wa-fme','fme');
    })();
  </script>
